@{
	ViewData["Title"] = "Subject search";
}
<div class="text-center">
	<form method="post">
		<div class="active-cyan-4 mb-4">
			<div>
				<input class="form-control" type="text" placeholder="Enter Subject ID" name="Subject">
				<div class="col-1">
					<input type="submit" class="btn btn-success" value="Choose this subject" asp-controller="Timetable" asp-action="SubjectSearch" />
				</div>
			</div>
		</div>
	</form>
</div>
<table class="table">
	<tbody>
			@foreach (var subject in ViewBag.SearchHistory)
			{
				<tr>
					<td>@subject.SubjectId: @subject.SubjectName</td>
				</tr>
			}
	</tbody>
</table>
<div class="text-center">
	<form>
		<div class="active-cyan-4 mb-4">
			<div>
				<div class="col-1">
					<input type="submit" class="btn btn-success" value="Arrange your timetable now" asp-controller="Timetable" asp-action="Arrange" />
				</div>
			</div>
		</div>
	</form>
</div>


